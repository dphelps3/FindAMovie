@model FindAMovie.Models.Movie

@{
    ViewBag.Title = Model.Name;
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre</li>
    <li>Date Released: @Model.DateReleased.Value.ToShortDateString()</li>
    <li>Date Added: @Model.DateAdded.Value.ToShortDateString()</li>
    <li>Number in Stock: @Model.InStock</li>
</ul>